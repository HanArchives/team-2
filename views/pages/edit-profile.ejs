<!doctype html>
<html lang="en">

<%- include('../components/head'); %>

    <body>
        <%- include('../components/header'); %>
            <main>

                <section class="register">
                    <h2>Edit your profile</h2>
                    <img class="img-add-doggo" src="img/ui/mainpom.png" alt="Main pom logo">
                    <section class="dog-profile">
                        
                        <ul>
                            <li>
                                <span>Firstname</span>
                                <%= user.firstname %>
                            </li>
                            <li>
                                <span>Lastname</span>
                                <%= user.lastname %>
                              
                            </li>
                            <li>
                                <span>Username</span>
                                <%= user.username %>
                             
                            </li>
                            <li>
                                <span>E-mail</span>
                                <%= user.email %>
                                
                            </li>
                            <li>
                                <span>Password</span>
                                <%= user.password %>
                               
                            </li>
                        </ul>
                                    <form action="/edit" method="POST">
                                        <button name="edit" type="submit" id="edit">
                                            Adopt!
                                        </button>
                                    </form>
                           
                    </section>
    
                    
            </main>
            <%- include('../components/footer'); %>
                <script src="scripts/animate-api.js"></script>
                <script src="scripts/menu.js"></script>
    </body>

</html>